@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "AssUser", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Welcome ,@Session["fullname"] </a>
            <ul class="dropdown-menu" role="menu">
                <li>@Html.ActionLink("Change Password", "ChangePassword", "AssUser")</li>
            </ul>
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">        
        <li>@Html.ActionLink("Log in", "Login", "AssUser", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
